{
    "compilerOptions": {
        "jsx": "react",
        "module": "commonjs",
        "lib": [
            "es6",
            "es2015",
            "dom"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "target": "es5",
        "declaration": false,
        "moduleResolution": "node",
        "baseUrl": ".",
        "rootDir": ".",
        "paths": {
            "client/*": ["./client/*"],
            "server/*": ["./server/*"]
        }
    },
    "exclude": [
        "node_modules"
    ]
}